// prisma/schema.prisma

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  password   String
  username   String
  image      String?
  expertise  String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("User") // Ensures the table is named "User" to match Mongoose's convention
}
